<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/teamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAZWA DRUZYNY"
            app:layout_row="0"
            app:layout_column="1"/>

        <TextView
            android:id="@+id/howManyMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STAN KONTA"
            app:layout_row="1"
            app:layout_column="0"/>

        <TextView
            android:id="@+id/teamValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ILE WARTA DRUŻYNA"
            app:layout_row="1"
            app:layout_column="2"/>

        <TextView
            android:id="@+id/howManyPointsThisTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ILE PKT W TEJ KOLEJCE"
            app:layout_row="2"
            app:layout_column="0"/>

        <TextView
            android:id="@+id/howManyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ILE MAM PUNKTOW"
            app:layout_row="2"
            app:layout_column="2"/>

        <TextView
            android:id="@+id/nextTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NASTĘPNA KOLEJKA"
            app:layout_row="3"
            app:layout_column="0"/>

        <TextView
            android:id="@+id/howManyTurns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ILE ZOSTALO KOLEJEK"
            app:layout_row="3"
            app:layout_column="2"/>

        <TextView
            android:id="@+id/tablePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIEJSCE W TABELI"
            app:layout_row="4"
            app:layout_column="1"/>
    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>
</FrameLayout>